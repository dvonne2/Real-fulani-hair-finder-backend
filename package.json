{
  "name": "fulani-quiz-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "sequelize db:migrate --config sequelize.config.cjs",
    "db:migrate:undo": "sequelize db:migrate:undo --config sequelize.config.cjs",
    "db:seed": "sequelize db:seed:all --config sequelize.config.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
